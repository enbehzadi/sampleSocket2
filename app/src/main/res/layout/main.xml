<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tr_send_message"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_reply_from_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:orientation="vertical"/>
    </ScrollView>

    <Button
        android:id="@+id/bt_Server"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="111dp"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:text="Server"/>

    <Button
        android:id="@+id/bt_Client"
        android:layout_width="136dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/bt_Server"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="Client"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Are You Client Or Server?"
        android:textSize="24sp"/>
</RelativeLayout>